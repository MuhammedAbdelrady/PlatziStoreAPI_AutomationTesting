            <class name="shop.Product.CreateProduct"></class>
            <class name="shop.Product.UpdateProduct"></class>
            <class name="shop.Product.DeleteProduct"></class>
        </classes>
    </test>
    <test name="User">
        <classes>
            <class name="shop.User.GetSingleUser"></class>
